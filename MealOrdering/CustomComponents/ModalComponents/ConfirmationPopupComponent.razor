@inherits BaseModalComponent


<div class="card-body">
	<p>
		@Message
	</p>
</div>
<div class="row justify-content-center">
	<div class="d-flex">
		<button class="btn btn-danger" @onclick="@ConfirmClicked">
			@YesText
		</button>
		<button class="btn btn-primary" @onclick="@CancelClicked">
			@NoText
		</button>
	</div>
</div>

@code {


	public async override Task SetParametersAsync(ParameterView parameters)
	{
		Message = parameters.GetValueOrDefault<String>("Message") ?? "Mesaj Yok";
		YesText = parameters.GetValueOrDefault<String>("YesText") ?? "Yes";
		NoText = parameters.GetValueOrDefault<String>("NoText") ?? "No";

		await base.SetParametersAsync(parameters);
	}

}
